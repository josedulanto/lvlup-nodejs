<form action="/recipes/suggest" method="post">
	<p>
		<label for="name">Recipe Title</label>
		<input type="text" name="name" value="" placeholder="" id="name"/>
	</p>

	<p>
		<label for="ingredients">Ingredients</label>
		<textarea name="ingredients" rows="8" cols="40" id="ingredients"></textarea>
	</p>

	<p>
		<label for="directions">Directions</label>
		<textarea name="directions" rows="8" cols="40" id="directions"></textarea>
	</p>

	<p><input type="submit" value="Submit"></p>
</form>